<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFinance.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFinance"
    xmlns:pages="clr-namespace:MyFinance.Pages">
    
    <TabBar>
        <Tab
            Title="Главная">
            <ShellContent ContentTemplate="{x:DataTemplate local:MainPage}"/>
        </Tab>
        <Tab
            Title="Доходы">
            <ShellContent ContentTemplate="{x:DataTemplate pages:IncomesPage}"/>
        </Tab>
        <Tab
            Title="Расходы">
            <ShellContent ContentTemplate="{x:DataTemplate pages:ExpendituresPage}"/>
        </Tab>
    </TabBar>
    
</Shell>
