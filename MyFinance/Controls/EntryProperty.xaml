<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFinance.Controls.EntryProperty">
    <VerticalStackLayout>
        <Label 
            x:Name="Name"
            HorizontalOptions="Center"
            TextColor="{AppThemeBinding Light={StaticResource Secondary_Light}, Dark={StaticResource Secondary_Dark}}"/>
        <Entry
            x:Name="Value"
            TextChanged="Entry_TextChanged"
            HorizontalTextAlignment="Center"
            PlaceholderColor="{AppThemeBinding Light={StaticResource Tertiary_Light}, Dark={StaticResource Tertiary_Dark}}"
            TextColor="{AppThemeBinding Light={StaticResource Secondary_Light}, Dark={StaticResource Secondary_Dark}}"/>
    </VerticalStackLayout>
</ContentView>
